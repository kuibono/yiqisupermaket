				</div>
				<div field="ClassCode" headeralign="center" align="center" width="60">
				    所属分类
					<input id="filter_ClassCode" name="ClassCode" property="filter" class="mini-textbox" onvaluechanged="search" style="width:100%;" />
				</div>
				<div field="Functionary" headeralign="center" align="center" width="60">
				    负责人
					<input id="filter_Functionary" name="Functionary" property="filter" class="mini-textbox" onvaluechanged="search" style="width:100%;" />
				</div>
				<div field="FunctionaryPhone" headeralign="center" align="center" width="60">
				    负责人电话
					<input id="filter_FunctionaryPhone" name="FunctionaryPhone" property="filter" class="mini-textbox" onvaluechanged="search" style="width:100%;" />
				</div>
				<div field="ContactAddress" headeralign="center" align="center" width="60">
				    联系地址
					<input id="filter_ContactAddress" name="ContactAddress" property="filter" class="mini-textbox" onvaluechanged="search" style="width:100%;" />
				</div>
				<div field="OfficePhone" headeralign="center" align="center" width="60">
