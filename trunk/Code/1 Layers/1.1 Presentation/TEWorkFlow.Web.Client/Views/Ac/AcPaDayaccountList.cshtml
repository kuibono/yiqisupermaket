					<input id="filter_CurrentPoFlowNumber" name="CurrentPoFlowNumber" property="filter" class="mini-textbox" onvaluechanged="search" style="width:100%;" />
				</div>
				<div field="LastAlFlowNumber" headeralign="center" align="center" width="60">
