					<input id="filter_CurrentPiFlowNumber" name="CurrentPiFlowNumber" property="filter" class="mini-textbox" onvaluechanged="search" style="width:100%;" />
				</div>
				<div field="LastPoFlowNumber" headeralign="center" align="center" width="60">
