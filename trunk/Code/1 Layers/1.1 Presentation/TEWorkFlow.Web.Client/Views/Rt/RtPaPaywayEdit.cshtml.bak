@model YiQiWorkFlow.Domain.Rt.RtPaPayway
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>付款方式编辑</title>
    <link type="text/css" rel="Stylesheet" href="/Styles/editPage.css" />
    <script type="text/javascript" src="/scripts/boot.js"></script>
    <script type="text/javascript" src="/Scripts/editPage.js"></script>
    <script type="text/javascript"> var pageTitle = "付款方式"; var formChanged = false; var pageType = "Edit"; var createTime = "2014/2/13 20:26:54";var id="@Model.Id";pageName="RtPaPaywayEdit"; </script>
	<script type="text/javascript">
        function SaveData() {
            var form = new mini.Form("#formMain"); // default form
            var o = form.getData();
            $.ajax({
                url: "/Rt/SaveRtPaPayway",
                type: 'post',
                data: o,
                cache: false,
				dataType:"json",
                success: function (r) {
                    if (r.IsSuccess == true) {
                        closeWithNoValidate();
                    } else {
                        $("#Tooltip_Critical_RtPaPayway .content").first().text(r.Message);
                        $("#Tooltip_Critical_RtPaPayway").show("fast");
                        form.unmask();
                        $(document).scrollTop(0);
                    }
                },
                error: function (jqXHR, textStatus, errorThrown) {
                    $("#Tooltip_Critical_RtPaPayway .content").first().text(jqXHR.responseText);
                    $("#Tooltip_Critical_RtPaPayway").show("fast");
                    form.unmask();
					$(document).scrollTop(0);
                }
            });
        }
    </script>
</head>
<body>
    <div class="container">
        <h1>
            付款方式编辑
        </h1>
        <div class="tooltip warning hidden" id="Tooltip_Warning_RtPaPayway">
            <img src="/images/Warning.png" alt="Warning" height="48" width="48" />
			<p class="content">
            	此处填写关于付款方式编辑页面的警告信息
			</p>
            <div class="button-close">
                x</div>
            <div class="buttonGroup">
                <input type="button" class="myYellowButton buttonNoMoreShow" value="不再显示" />
                <input type="button" class="myYellowButton buttonClose" value="关闭" />
            </div>
        </div>
        <div class="tooltip info hidden" id="Tooltip_Info_RtPaPayway">
            <img src="/images/Info.png" alt="Warning" height="48" width="48" />
			<p class="content">
            	此处填写关于付款方式编辑页面的提示信息
			</p>
            <div class="button-close">
                x</div>
            <div class="buttonGroup">
                <input type="button" class="myYellowButton buttonNoMoreShow" value="不再显示" />
                <input type="button" class="myYellowButton buttonClose" value="关闭" />
            </div>
        </div>
        <div class="tooltip help hidden" id="Tooltip_Help_RtPaPayway">
            <img src="/images/Help.png" alt="Warning" height="48" width="48" />
			<p class="content">
            	此处填写关于付款方式编辑页面的帮助信息
			</p>
            <div class="button-close">
                x</div>
            <div class="buttonGroup">
                <input type="button" class="myYellowButton buttonNoMoreShow" value="不再显示" />
                <input type="button" class="myYellowButton buttonClose" value="关闭" />
            </div>
        </div>
        <div class="tooltip critical hidden" id="Tooltip_Critical_RtPaPayway">
            <img src="/images/critical.png" alt="Warning" height="48" width="48" />
			<p class="content">
            此处填写关于付款方式编辑页面的出错信息
			</p>
            <div class="button-close">
                x</div>
            <div class="buttonGroup">
                <input type="button" class="myYellowButton buttonNoMoreShow" value="不再显示" />
                <input type="button" class="myYellowButton buttonClose" value="关闭" />
            </div>
        </div>
        <form id="formMain" method="post" action="">
        <fieldset>
            <legend>基本信息</legend>
            <div class="ablock" style="display:none">
                <label for="Control_PaywayCode">付款方式编码:</label>
                <input id="Control_PaywayCode" value="@Model.Id" name="PaywayCode" class="mini-hidden"/>
            </div>

            <div class="ablock">
                <label for="Control_PaywayName">付款方式名称:</label>
                <input type="text"  value="@Model.PaywayName" class="mini-textbox" name="PaywayName" id="Control_PaywayName" vtype="maxLength:20" />
            </div>

            <div class="ablock">
                <label for="Control_PaywaySubCode">付款方式简码:</label>
                <input type="text"  value="@Model.PaywaySubCode" class="mini-textbox" name="PaywaySubCode" id="Control_PaywaySubCode" vtype="maxLength:20" />
            </div>

            <div class="ablock">
                <label for="Control_PaywayType">付款类型:</label>
                <input type="text"  value="@Model.PaywayType" class="mini-textbox" name="PaywayType" id="Control_PaywayType" vtype="maxLength:20" />
            </div>

            <div class="ablock">
                <label for="Control_ExRate">汇率:</label>
                <input type="text" id="Control_ExRate" name="ExRate"  value="@Model.ExRate" class="mini-spinner" minValue="0" maxValue="1000" decimalPlaces="4"/>
            </div>

            <div class="ablock">
                <label for="Control_IfChange">是否设置找零:</label>
                <div id="Control_IfChange" name="IfChange" value="1" class="mini-checkbox" checked="true" readOnly="false" text="设置找零"></div>
            </div>

           
        </fieldset>
        <div class="clear">
        </div>
        <div class="control-panel">
            <div class="control-button">
                <input type="button" class="myButton" id="btnFormSubmit" value="保存(Ctrl+S)" />
                <input type="reset" class="myGrayButton" id="btnFormReset" value="重置(Esc)" />
                <input type="button" class="myRedButton" id="btnClosePage" value="关闭(Ctrl+Q)" />
            </div>
            <div class="botton-up">
            </div>
        </div>
        </form>
    </div>
</body>
</html>

