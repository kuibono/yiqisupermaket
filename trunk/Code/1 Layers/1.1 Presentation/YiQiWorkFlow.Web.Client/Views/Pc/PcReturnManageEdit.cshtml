@model YiQiWorkFlow.Domain.Pc.PcReturnManage
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>商品返货单编辑</title>
    <link type="text/css" rel="Stylesheet" href="/Styles/editPage.css" />
    <script type="text/javascript" src="/scripts/boot.js"></script>
    <script type="text/javascript" src="/Scripts/editPage.js"></script>
    <script type="text/javascript"> var pageTitle = "商品返货单"; var formChanged = false; var pageType = "Edit"; var createTime = "2014/2/15 19:58:54"; var id = "@Model.Id"; pageName = "PcReturnManageEdit";var isNew=@Model.IsAdded; </script>
    <script type="text/javascript">
        function SaveData() {
            var form = new mini.Form("#formMain"); // default form
            var o = form.getData();
            var grid = mini.get("datagrid1");
            grid1.commitEdit();
            var goods = grid1.getChanges();
            o["goods"] = goods;
            $.ajax({
                url: "/Pc/SavePcReturnManage",
                type: 'post',
                data: o,
                cache: false,
                dataType: "json",
                success: function (r) {
                    if (r.IsSuccess == true) {
                        closeWithNoValidate();
                    } else {
                        $("#Tooltip_Critical_PcReturnManage .content").first().text(r.Message);
                        $("#Tooltip_Critical_PcReturnManage").show("fast");
                        form.unmask();
                        $(document).scrollTop(0);
                    }
                },
                error: function (jqXHR, textStatus, errorThrown) {
                    $("#Tooltip_Critical_PcReturnManage .content").first().text(jqXHR.responseText);
                    $("#Tooltip_Critical_PcReturnManage").show("fast");
                    form.unmask();
                    $(document).scrollTop(0);
                }
            });
        }
        function addRow(row) {
            var grid = mini.get("datagrid1");
            grid.addRow(row, 0);
        }
        function onPcNumberChanged(e) {
            var d = e.selected;
            mini.get("Control_SupCode").setValue(d.SupCode);
            mini.get("Control_EnCode").setValue(d.EnCode);
            mini.get("Control_PcForm").setValue(d.PcForm);
            mini.get("Control_dCode").setValue(d.dCode);
            //mini.get("Control_dName").setValue(d.dName);
            mini.get("Control_bCode").setValue(d.bCode);
            mini.get("Control_WhCode").setValue(d.WhCode);
            $.getJSON("/Pc/SearchPcPurchaseDetailList?PcNumber=" + d.Id, function (j) {
                if (j.data.length == 0) {
                    return false;
                }
                for (var i = 0; i < j.data.length; i++) {
                    var row = {
                        RtNumber: "",
                        GoodsCode: j.data[i].GoodsCode,
                        GoodsBarCode: j.data[i].GoodsBarCode,
                        Specification: j.data[i].Specification,
                        PackUnitCode: j.data[i].PackUnitCode,
                        PackQty: j.data[i].PackQty,
                        PackCoef: j.data[i].PackCoef,
                        //ReturnQty: j.data[i].ReturnQty,
                        SalePrice: j.data[i].SalePrice,
                        PurchasePrice: j.data[i].PurchasePrice,
                        NontaxPurchasePrice: j.data[i].NontaxPurchasePrice,
                        //ReturnMoney: j.data[i].ReturnMoney,
                        //NontaxReturnMoney:0,
                        SaleMoney: j.data[i].SaleMoney,
                        NontaxSaleMoney: j.data[i].NontaxSaleMoney
                    };
                    var grid = mini.get("datagrid1");
                    grid.addRow(row, 0);
                }
            });
        }
        function onrowdblclick(e) {
            var grid = mini.get("datagrid1");
            if (grid.isEditing()) {
                grid.commitEdit();
            }
            grid.beginEditRow(e.row);
            //mini.getbyName("GoodsCode", "datagri1").focus();
            //setTimeout(function () {
            //    mini.getbyName("GoodsCode", "datagrid1").focus();
            //}, 500);

        }
        function PurchasePriceChanged(e) {
            var qty = parseInt(mini.getbyName("ReturnQty", "datagrid1").getValue());
            var price =parseFloat(mini.getbyName("PurchasePrice", "datagrid1").getValue());
            mini.getbyName("ReturnMoney", "datagrid1").setValue(qty * price);
        }
        function NontaxPurchasePriceChanged(e) {

        }
        $(function () {
            var grid = mini.get("datagrid1");
            grid.reload();
            jQuery.hotkeys.add('return', function () {
                if (mini.get("filter_SupCode").getValue().length == 0) {
                    alert("必须先设置供货商");
                    return false;
                }
                if (grid.isEditing()) {
                    grid.commitEdit();
                }
                var row = {};
                grid.addRow(row, 0);
                grid.cancelEdit();
                grid.beginEditRow(row);
                //mini.getbyName("GoodsCode", "datagrid1").setUrl("/Fb/SearchFbGoodsArchivesListForList?SupCode=" + mini.get("filter_SupCode").getValue());
                //setTimeout(function () {
                //    mini.getbyName("GoodsCode", "datagrid1").focus();
                //}, 500);
            });
            jQuery.hotkeys.add('esc', function () {
                grid.reload();
            });
            jQuery.hotkeys.add('del', function () {
                grid.removeRows(grid.getSelecteds());
            });
            $("#btnExame").click(function () {
                mini.get("Control_IfExamine").setValue("1");
                mini.get("Control_ExamineDate").setValue(new Date());
                //SaveData();
            });
            $("#btnRevoke").click(function () {
                mini.get("Control_IfExamine").setValue("-1");
                mini.get("Control_ExamineDate").setValue(new Date());
                //SaveData();
            });
            $("#btnQuery").click(function () {
                location.href = "/Pc/ReturnManageList";
            });
            $("#btnPrint").click(function () {
                //打印
            });
            $("#btnDelete").click(function () {
                if(isNew){
                    closeWithNoValidate();
                }
                else{
                    $.getJSON("/Pc/PcReturnManageDelete?ids=@Model.Id",function(j){
                        if(j==true){
                            closeWithNoValidate();
                        }else{
                            alert("删除失败");
                        }
                    });
                }
            });
            $("#btnGoods").click(function () {
                var btnEdit = this;
                if (mini.get("filter_SupCode").getValue().length == 0) {
                    alert("必须先设置供货商");
                    return false;
                }
                mini.open({
                    url: "/Common/GoodsSelector?OpCode=3",
                    title: "选择列表",
                    width: 600,
                    height: 380,
                    ondestroy: function (action) {
                        //if (action == "close") return false;
                        if (action == "ok") {
                            var iframe = this.getIFrameEl();
                            var data = iframe.contentWindow.GetData();
                            data = mini.clone(data);    //必须
                            if (data) {
                                for (var i = 0; i < data.length; i++) {
                                    var row = {
                                        GoodsCode: data[i].Id,
                                        GoodsBarCode: data[i].GoodsBarCode,
                                        Specification: data[i].Specification,
                                        PackUnitCode: data[i].PackUnitCode,
                                        OfferMin: data[i].OfferMin,
                                        StockQty: data[i].StockQty,
                                        OrderQty: data[i].OrderQty,
                                        PackQty: data[i].PackQty,
                                        PackCoef: data[i].PackCoef,
                                        PurchaseQty: data[i].PurchaseQty,
                                        PutinQty: data[i].PutinQty,
                                        SalePrice: data[i].SalePrice,
                                        PurchasePrice: data[i].PurchasePrice,
                                        NontaxPurchasePrice: data[i].NontaxPurchasePrice,
                                        PurchaseMoney: data[i].PurchaseMoney,
                                        NontaxPurchaseMoney: data[i].NontaxPurchaseMoney,
                                        ProduceDate: data[i].ProduceDate
                                    };
                                    addRow(row);
                                }
                            }
                        }

                    }
                });
            });
        });
    </script>
</head>
<body>
    <div class="container">
        <h1>商品返货单编辑
        </h1>
        <div class="tooltip warning hidden" id="Tooltip_Warning_PcReturnManage">
            <img src="/images/Warning.png" alt="Warning" height="48" width="48" />
            <p class="content">
                此处填写关于商品返货单编辑页面的警告信息
            </p>
            <div class="button-close">
                x
            </div>
            <div class="buttonGroup">
                <input type="button" class="myYellowButton buttonNoMoreShow" value="不再显示" />
                <input type="button" class="myYellowButton buttonClose" value="关闭" />
            </div>
        </div>
        <div class="tooltip info hidden" id="Tooltip_Info_PcReturnManage">
            <img src="/images/Info.png" alt="Warning" height="48" width="48" />
            <p class="content">
                此处填写关于商品返货单编辑页面的提示信息
            </p>
            <div class="button-close">
                x
            </div>
            <div class="buttonGroup">
                <input type="button" class="myYellowButton buttonNoMoreShow" value="不再显示" />
                <input type="button" class="myYellowButton buttonClose" value="关闭" />
            </div>
        </div>
        <div class="tooltip help hidden" id="Tooltip_Help_PcReturnManage">
            <img src="/images/Help.png" alt="Warning" height="48" width="48" />
            <p class="content">
                此处填写关于商品返货单编辑页面的帮助信息
            </p>
            <div class="button-close">
                x
            </div>
            <div class="buttonGroup">
                <input type="button" class="myYellowButton buttonNoMoreShow" value="不再显示" />
                <input type="button" class="myYellowButton buttonClose" value="关闭" />
            </div>
        </div>
        <div class="tooltip critical hidden" id="Tooltip_Critical_PcReturnManage">
            <img src="/images/critical.png" alt="Warning" height="48" width="48" />
            <p class="content">
                此处填写关于商品返货单编辑页面的出错信息
            </p>
            <div class="button-close">
                x
            </div>
            <div class="buttonGroup">
                <input type="button" class="myYellowButton buttonNoMoreShow" value="不再显示" />
                <input type="button" class="myYellowButton buttonClose" value="关闭" />
            </div>
        </div>
        <form id="formMain" method="post" action="">
            <fieldset>
                <legend>基本信息</legend>
                <div class="ablock">
                    <label for="Control_RtNumber">返货单号:</label>
                    <input id="Control_RtNumber" value="@Model.Id" name="Id" class="mini-textbox" enabled="false"/>
                </div>

                <div class="ablock">
                    <label for="Control_PcNumber">采购单号:</label>
                    <input type="text"  value="@Model.PcNumber" class="mini-combobox" name="PcNumber" id="Control_PcNumber" allowInput="true" valueField="Id" textField="Id" onvaluechanged="onPcNumberChanged" url="/Pc/SearchPcPurchaseManageListForList?IfExamine=1" />
                </div>

                <div class="ablock">
                    <label for="Control_SupCode">供货商编码:</label>
                    <input type="text"  value="@Model.SupCode" class="mini-textbox" name="SupCode" id="Control_SupCode" vtype="maxLength:20"required="true" />
                </div>

                <div class="ablock">
                    <label for="Control_EnCode">企业编码:</label>
                    <input type="text"  value="@Model.EnCode" class="mini-textbox" name="EnCode" id="Control_EnCode" vtype="maxLength:20" />
                </div>

                <div class="ablock">
                    <label for="Control_PcForm">采购形式:</label>
                    <input type="text"  value="@Model.PcForm" class="mini-combobox" data="c_PcForm" name="PcForm" id="Control_PcForm" vtype="maxLength:20" />
                </div>

                <div class="ablock">
                    <label for="Control_dCode">部门编码:</label>
                    <input type="text"  value="@Model.dCode" class="mini-combobox" name="dCode" id="Control_dCode" url="/Common/GetComboData?table=sys_pa_department&valueColumn=d_code&textColumn=d_name" required="true" />
                    <input id="control_dName" value="" name="dName" class="mini-hidden" />
                </div>

                <div class="ablock">
                    <label for="Control_bCode">门店编码:</label>
                    <input type="text"  value="@Model.bCode" class="mini-textbox" name="bCode" id="Control_bCode" vtype="maxLength:20" />
                </div>

                <div class="ablock">
                    <label for="Control_WhCode">仓库编码:</label>
                    <input type="text"  value="@Model.WhCode" class="mini-textbox" name="WhCode" id="Control_WhCode" vtype="maxLength:20" />
                </div>

                <div class="ablock">
                    <label for="Control_ReturnDate">返货日期:</label>
                    <input type="text" id="Control_ReturnDate" name="ReturnDate"  value="@Model.ReturnDate" class="mini-datepicker"  format="yyyy-MM-dd H:mm:ss" timeFormat="H:mm:ss" showTime="true" showOkButton="true" showClearButton="true" required="false" />
                </div>

                <div class="ablock">
                    <label for="Control_IfPutout">是否出库:</label>
                    <div id="Control_IfPutout" name="IfPutout" value="1" class="mini-checkbox" checked="true" readonly="false" text="出库"></div>
                </div>

                <div class="ablock">
                    <label for="Control_PutoutDate">出库日期:</label>
                    <input type="text" id="Control_PutoutDate" name="PutoutDate"  value="@Model.PutoutDate" class="mini-datepicker"  format="yyyy-MM-dd H:mm:ss" timeFormat="H:mm:ss" showTime="true" showOkButton="true" showClearButton="true" required="false" />
                </div>

                <div class="ablock">
                    <label for="Control_CreateDate">创建时间:</label>
                    <input type="text" id="Control_CreateDate" name="CreateDate"  value="@Model.CreateDate" class="mini-datepicker"  format="yyyy-MM-dd H:mm:ss" timeFormat="H:mm:ss" showTime="true" showOkButton="true" showClearButton="true" required="false" />
                </div>

                <div class="ablock">
                    <label for="Control_Operator">操作员:</label>
                    <input type="text"  value="@Model.Operator" class="mini-textbox" name="Operator" id="Control_Operator" vtype="maxLength:20" />
                </div>

                <div class="ablock">
                    <label for="Control_Assessor">审核人:</label>
                    <input type="text"  value="@Model.Assessor" class="mini-textbox" name="Assessor" id="Control_Assessor" vtype="maxLength:20" />
                </div>

                <div class="ablock">
                    <label for="Control_IfExamine">是否审核:</label>
                    <div id="Control_IfExamine" name="IfExamine" value="1" class="mini-checkbox" checked="true" readonly="false" text="审核"></div>
                </div>

                <div class="ablock">
                    <label for="Control_ExamineDate">审核时间:</label>
                    <input type="text" id="Control_ExamineDate" name="ExamineDate"  value="@Model.ExamineDate" class="mini-datepicker"  format="yyyy-MM-dd H:mm:ss" timeFormat="H:mm:ss" showTime="true" showOkButton="true" showClearButton="true" required="false" />
                </div>

                <div class="ablock">
                    <label for="Control_OperatorDate">操作时间:</label>
                    <input type="text" id="Control_OperatorDate" name="OperatorDate"  value="@Model.OperatorDate" class="mini-datepicker"  format="yyyy-MM-dd H:mm:ss" timeFormat="H:mm:ss" showTime="true" showOkButton="true" showClearButton="true" required="false" />
                </div>


            </fieldset>
            <div id="datagrid1" class="mini-datagrid" url="/Pc/SearchPcReturnDetailList?RtNumber=@Model.Id"
                style="width: 100%; height: 200px; margin-top:10px;" idfield="id" allowresize="false" sizelist="[20,30,50,100]"
                pagesize="20" multiselect="true" showfilterrow="false" showpager="false" onrowdblclick="onrowdblclick">
                <div property="columns">
                    <div type="indexcolumn" width="30">
                    </div>
                    <div type="checkcolumn" width="30">
                    </div>
                    <div field="GoodsCode" headeralign="center" align="center" width="60">
                        商品编码
					<input id="filter_GoodsCode" name="GoodsCode" property="editor" class="mini-textbox" enabled="false" style="width: 100%;" />
                    </div>
                    <div field="GoodsBarCode" headeralign="center" align="center" width="60">
                        商品销售码
					<input id="filter_GoodsBarCode" name="GoodsBarCode" property="editor" class="mini-textbox" enabled="false" style="width: 100%;" />
                    </div>
                    <div field="Specification" headeralign="center" align="center" width="60">
                        规格
					<input id="filter_Specification" name="Specification" property="editor" class="mini-textbox" enabled="false" style="width: 100%;" />
                    </div>
                    <div field="PackUnitCode" headeralign="center" align="center" width="60">
                        包装单位
					<input id="filter_PackUnitCode" name="PackUnitCode" property="editor" class="mini-textbox" enabled="false" style="width: 100%;" />
                    </div>
                    <div field="PackQty" headeralign="center" align="center" width="60">
                        整件数量
					<input id="filter_PackQty" name="PackQty" property="editor" class="mini-spinner" maxValue="99999" enabled="false" style="width: 100%;" />
                    </div>
                    <div field="PackCoef" headeralign="center" align="center" width="60">
                        包装系数
					<input id="filter_PackCoef" name="PackCoef" property="editor" class="mini-spinner" maxValue="99999" enabled="false" style="width: 100%;" />
                    </div>
                    <div field="ReturnQty" headeralign="center" align="center" width="60">
                        单品数量
					<input id="filter_ReturnQty" name="ReturnQty" property="editor" class="mini-spinner" maxValue="99999" enabled="false" style="width: 100%;" />
                    </div>
                    <div field="SalePrice" headeralign="center" align="center" width="60">
                        销售价
					<input id="filter_SalePrice" name="SalePrice" property="editor" class="mini-spinner" decimalPlaces="2" enabled="false" style="width: 100%;" />
                    </div>
                    <div field="PurchasePrice" headeralign="center" align="center" width="60">
                        含税进价
					<input id="filter_PurchasePrice" name="PurchasePrice" property="editor" decimalPlaces="2" onvaluechanged="PurchasePriceChanged" class="mini-spinner" style="width: 100%;" />
                    </div>
                    <div field="NontaxPurchasePrice" headeralign="center" align="center" width="60">
                        不含税进价
					<input id="filter_NontaxPurchasePrice" name="NontaxPurchasePrice" property="editor" onvaluechanged="NontaxPurchasePriceChanged" class="mini-spinner" decimalPlaces="2"  style="width: 100%;" />
                    </div>
                    <div field="ReturnMoney" headeralign="center" align="center" width="60">
                        含税金额
					<input id="filter_ReturnMoney" name="ReturnMoney" property="editor" decimalPlaces="2" class="mini-spinner" style="width: 100%;" />
                    </div>
                    <div field="NontaxReturnMoney" headeralign="center" align="center" width="60">
                        不含税金额
					<input id="filter_NontaxReturnMoney" name="NontaxReturnMoney" property="editor" class="mini-spinner" decimalPlaces="2" style="width: 100%;" />
                    </div>
                    <div field="SaleMoney" headeralign="center" align="center" width="60">
                        售价金额
					<input id="filter_SaleMoney" name="SaleMoney" property="editor" class="mini-spinner" decimalPlaces="2" enabled="false" style="width: 100%;" />
                    </div>
                    <div field="NontaxSaleMoney" headeralign="center" align="center" width="60">
                        不含税售价金额
					<input id="filter_NontaxSaleMoney" name="NontaxSaleMoney" property="editor" class="mini-spinner" decimalPlaces="2" enabled="false" style="width: 100%;" />
                    </div>
                </div>
            </div>
            <div class="clear">
            </div>
            <div class="control-panel">
                <div class="control-button">
                    <input type="button" class="myButton" id="btnFormSubmit" value="保存(Ctrl+S)" />
                    <input type="button" class="myButton" id="btnGoods" value="商品" />
                    <input type="button" class="myButton" id="btnExame" value="审核(Ctrl+E)" />
                    <input type="button" class="myButton" id="btnDelete" value="删除" />
                    <input type="button" class="myButton" id="btnPrint" value="打印" />
                    <input type="button" class="myButton" id="btnSearch" value="查询" />
                    <input type="button" class="myButton" id="btnRevoke" value="废除" />
                    <input type="button" class="myButton" id="btnSubmit" value="提交" />
                    <input type="reset" class="myGrayButton" id="btnFormReset" value="重置(Esc)" />
                    <input type="button" class="myRedButton" id="btnClosePage" value="关闭(Ctrl+Q)" />
                </div>
                <div class="botton-up">
                </div>
            </div>
        </form>
    </div>
</body>
</html>

