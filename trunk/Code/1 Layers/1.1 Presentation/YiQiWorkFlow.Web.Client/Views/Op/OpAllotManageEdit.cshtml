        //        $.getJSON("/Common/ChangeDbValue?table=op_allot_manage&pkColumn=al_number&pkValue=@Model.Id&assessor=&if_examine=1&examine_date=" + new Date(), function (r) {
        //
        //        });
        //    }
        //    $("#btnExame").prop("disabled", true);
        //});
        if ("@Model.IfExamine" == "1") {
            $("#btnExame").prop("disabled", true);
        }
        $("#btnInStock").click(function () {
            mini.get("Control_IfPutin").setValue("1");
            mini.get("Control_PutinDate").setValue(new Date());
        });
        $("#btnDel").click(function () {
            if (isNew == false) {
                //删除
                $.ajax({
                    url: "/Op/OpAllotManageDelete",
                    data: { ids: id, confirm: "true" },
