                    <input type="text"  value="@Model.WhCodeOut" class="mini-combobox" name="WhCodeOut" id="Control_WhCodeOut"  url="/Common/GetComboData?table=op_pa_warehouse&valueColumn=wh_code&textColumn=wh_name" />
                </div>

                <div class="ablock hidden">
