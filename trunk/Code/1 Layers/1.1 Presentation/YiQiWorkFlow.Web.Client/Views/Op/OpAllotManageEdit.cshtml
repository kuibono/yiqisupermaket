                        <input type="text" id="editor_PackQty" name="PackQty" property="editor" class="mini-spinner" minValue="-999999999" maxValue="999999999" decimalplaces="4" style="width: 100%;" />
                    </div>


                    <div field="PackCoef" headeralign="center" align="center" width="60">
