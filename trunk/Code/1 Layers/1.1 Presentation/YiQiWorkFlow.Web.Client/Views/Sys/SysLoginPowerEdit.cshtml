@model YiQiWorkFlow.Domain.Sys.SysLoginPower
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>登录权限设置编辑</title>
    <link type="text/css" rel="Stylesheet" href="/Styles/editPage.css" />
    <script type="text/javascript" src="/scripts/boot.js"></script>
    <script type="text/javascript" src="/Scripts/editPage.js"></script>
    <script type="text/javascript"> var pageTitle = "登录权限设置"; var formChanged = false; var pageType = "Edit"; var createTime = "2014/2/13 20:26:57";var id="@Model.Id";pageName="SysLoginPowerEdit"; </script>
	<script type="text/javascript">
        function SaveData() {
            var form = new mini.Form("#formMain"); // default form
            var o = form.getData();
            $.ajax({
                url: "/Sys/SaveSysLoginPower",
                type: 'post',
                data: o,
                cache: false,
				dataType:"json",
                success: function (r) {
                    if (r.IsSuccess == true) {
                        closeWithNoValidate();
                    } else {
                        $("#Tooltip_Critical_SysLoginPower .content").first().text(r.Message);
                        $("#Tooltip_Critical_SysLoginPower").show("fast");
                        form.unmask();
                        $(document).scrollTop(0);
                    }
                },
                error: function (jqXHR, textStatus, errorThrown) {
                    $("#Tooltip_Critical_SysLoginPower .content").first().text(jqXHR.responseText);
                    $("#Tooltip_Critical_SysLoginPower").show("fast");
                    form.unmask();
					$(document).scrollTop(0);
                }
            });
        }
    </script>
</head>
<body>
    <div class="container">
        <h1>
            登录权限设置编辑
        </h1>
        <div class="tooltip warning hidden" id="Tooltip_Warning_SysLoginPower">
            <img src="/images/Warning.png" alt="Warning" height="48" width="48" />
			<p class="content">
            	此处填写关于登录权限设置编辑页面的警告信息
			</p>
            <div class="button-close">
                x</div>
            <div class="buttonGroup">
                <input type="button" class="myYellowButton buttonNoMoreShow" value="不再显示" />
                <input type="button" class="myYellowButton buttonClose" value="关闭" />
            </div>
        </div>
        <div class="tooltip info hidden" id="Tooltip_Info_SysLoginPower">
            <img src="/images/Info.png" alt="Warning" height="48" width="48" />
			<p class="content">
            	此处填写关于登录权限设置编辑页面的提示信息
			</p>
            <div class="button-close">
                x</div>
            <div class="buttonGroup">
                <input type="button" class="myYellowButton buttonNoMoreShow" value="不再显示" />
                <input type="button" class="myYellowButton buttonClose" value="关闭" />
            </div>
        </div>
        <div class="tooltip help hidden" id="Tooltip_Help_SysLoginPower">
            <img src="/images/Help.png" alt="Warning" height="48" width="48" />
			<p class="content">
            	此处填写关于登录权限设置编辑页面的帮助信息
			</p>
            <div class="button-close">
                x</div>
            <div class="buttonGroup">
                <input type="button" class="myYellowButton buttonNoMoreShow" value="不再显示" />
                <input type="button" class="myYellowButton buttonClose" value="关闭" />
            </div>
        </div>
        <div class="tooltip critical hidden" id="Tooltip_Critical_SysLoginPower">
            <img src="/images/critical.png" alt="Warning" height="48" width="48" />
			<p class="content">
            此处填写关于登录权限设置编辑页面的出错信息
			</p>
            <div class="button-close">
                x</div>
            <div class="buttonGroup">
                <input type="button" class="myYellowButton buttonNoMoreShow" value="不再显示" />
                <input type="button" class="myYellowButton buttonClose" value="关闭" />
            </div>
        </div>
        <form id="formMain" method="post" action="">
        <fieldset>
            <legend>基本信息</legend>
            <div class="ablock" style="display:none">
                <label for="Control_EmCode">人员编号:</label>
                <input id="Control_EmCode" value="@Model.Id" name="EmCode" class="mini-hidden"/>
            </div>

            <div class="ablock">
                <label for="Control_EmName">人员姓名:</label>
                <input type="text"  value="@Model.EmName" class="mini-textbox" name="EmName" id="Control_EmName" vtype="maxLength:20" />
            </div>

            <div class="ablock">
                <label for="Control_UserName">用户名:</label>
                <input type="text"  value="@Model.UserName" class="mini-textbox" name="UserName" id="Control_UserName" vtype="maxLength:20" />
            </div>

            <div class="ablock">
                <label for="Control_UserPw">密码:</label>
                <input type="text"  value="@Model.UserPw" class="mini-textbox" name="UserPw" id="Control_UserPw" vtype="maxLength:50" />
            </div>

            <div class="ablock">
                <label for="Control_IfCash">是否收银:</label>
                <div id="Control_IfCash" name="IfCash" value="1" class="mini-checkbox" checked="true" readOnly="false" text="收银"></div>
            </div>

            <div class="ablock">
                <label for="Control_CashFunction">收银功能:</label>
                <input type="text"  value="@Model.CashFunction" class="mini-textbox" name="CashFunction" id="Control_CashFunction" vtype="maxLength:50" />
            </div>

            <div class="ablock">
                <label for="Control_UserState">当前状态:</label>
                <input type="text"  value="@Model.UserState" class="mini-textbox" name="UserState" id="Control_UserState" vtype="maxLength:20" />
            </div>

            <div class="ablock">
                <label for="Control_MaxDiscount">最大折扣:</label>
                <input type="text" id="Control_MaxDiscount" name="MaxDiscount"  value="@Model.MaxDiscount" class="mini-spinner" minValue="0" maxValue="1000" decimalPlaces="4"/>
            </div>

           
        </fieldset>
        <div class="clear">
        </div>
        <div class="control-panel">
            <div class="control-button">
                <input type="button" class="myButton" id="btnFormSubmit" value="保存(Ctrl+S)" />
                <input type="reset" class="myGrayButton" id="btnFormReset" value="重置(Esc)" />
                <input type="button" class="myRedButton" id="btnClosePage" value="关闭(Ctrl+Q)" />
            </div>
            <div class="botton-up">
            </div>
        </div>
        </form>
    </div>
</body>
</html>

