@model YiQiWorkFlow.Domain.Fb.FbAdjustSaleprice
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>调商品售价编辑</title>
    <link type="text/css" rel="Stylesheet" href="/Styles/editPage.css" />
    <script type="text/javascript" src="/scripts/boot.js"></script>
    <script type="text/javascript" src="/Scripts/editPage.js"></script>
    <script type="text/javascript"> var pageTitle = "调商品售价"; var formChanged = false; var pageType = "Edit"; var createTime = "2014/2/15 19:58:47";var id="@Model.Id";pageName="FbAdjustSalepriceEdit"; var isNew=@Model.IsAdded.ToS().ToLower();</script>
    <script type="text/javascript">
        function SaveData() {
            var form = new mini.Form("#formMain"); // default form
            var o = form.getData();

            var grid = mini.get("datagrid1");
            if (grid.isEditing()) {
                grid.commitEdit();
            }
            var gd = grid.getChanges();
            for (var i = 0; i < gd.length; i++) {
                if (gd[i].GoodsCode == undefined || gd[i].GoodsCode.length == 0) {
                    alert("必须选择调整单商品！");
                    return false;
                }
                if (gd[i].SalePrice == undefined || gd[i].SalePrice == 0) {
                    alert("售价不能为0或者空！");
                    return false;
                }
                if (gd[i].VipPrice == undefined || gd[i].VipPrice == 0) {
                    alert("会员价不能为0或者空！");
                    return false;
                }
                if (gd[i].TradePrice == undefined || gd[i].TradePrice == 0) {
                    alert("批发价不能为0或者空！");
                    return false;
                }

            }
            o["goods"] = mini.encode(grid.getChanges());


            $.ajax({
                url: "/Fb/SaveFbAdjustSaleprice",
                type: 'post',
                data: o,
                cache: false,
                dataType:"json",
                success: function (r) {
                    if (r.IsSuccess == true) {
                        //location.href = "/Fb/FbAdjustSalepriceList";
                        try{ history.go(-1); } catch(e){}
                    } else {
                        $("#Tooltip_Critical_FbAdjustSaleprice .content").first().text(r.Message);
                        $("#Tooltip_Critical_FbAdjustSaleprice").show("fast");
                        form.unmask();
                        $(document).scrollTop(0);
                    }
                },
                error: function (jqXHR, textStatus, errorThrown) {
                    $("#Tooltip_Critical_FbAdjustSaleprice .content").first().text(jqXHR.responseText);
                    $("#Tooltip_Critical_FbAdjustSaleprice").show("fast");
                    form.unmask();
                    $(document).scrollTop(0);
                }
            });
        }

        function onGoodsChanged(e) {
            mini.getbyName("GoodsBarCode", "datagrid1").setValue(e.selected.GoodsBarCode);
            mini.getbyName("SalePriceOld", "datagrid1").setValue(e.selected.SalePrice);
            mini.getbyName("VipPriceOld", "datagrid1").setValue(e.selected.VipPrice);
            mini.getbyName("TradePriceOld", "datagrid1").setValue(e.selected.TradePrice);

            mini.getbyName("SalePrice", "datagrid1").focus();
        }
        function addRow(row) {
            var grid = mini.get("datagrid1");
            grid.addRow(row, 0);
        }
        function onrowdblclick(e) {
            var grid = mini.get("datagrid1");
            if (grid.isEditing()) {
                grid.commitEdit();
            }
            grid.beginEditRow(e.row);
            //mini.getbyName("GoodsCode", "datagri1").focus();
            setTimeout(function () {
                $("#datagrid1 input[name=GoodsCode]").parent().find(".mini-buttonedit-input:visible:first").focus();
            }, 500);

        }
        $(function () {
            var grid = mini.get("datagrid1");
            grid.reload();
            jQuery.hotkeys.add('return', function () {
                if (grid.isEditing()) {
                    grid.commitEdit();
                }
                var row = {};
                grid.addRow(row, 0);
                grid.cancelEdit();
                grid.beginEditRow(row);
            });
            jQuery.hotkeys.add('esc', function () {
                grid.reload();
            });
            jQuery.hotkeys.add('del', function () {
                grid.removeRows(grid.getSelecteds());
            });

            $("#btnExame").click(function () {
                mini.get("Control_IfExamine").setValue("1");
                mini.get("Control_ExamineDate").setValue(new Date());
                //SaveData();
            });
            $("#btnDel").click(function () {
                if (isNew == false) {
                    //删除
                    $.ajax({
                        url: "/Fb/FbAdjustSaleprice",
                        data: { ids: id, confirm: "true" },
                        dataType: "json",
                        success: function (r) {
                            closeWithNoValidate();
                        }
                    });
                }
                else {
                    closeWithNoValidate();
                }
            });
            $("#btnGoods").click(function () {
                var btnEdit = this;
                mini.open({
                    url: "/Common/GoodsSelector?OpCode=3",
                    title: "选择列表",
                    width: 600,
                    height: 380,
                    ondestroy: function (action) {
                        //if (action == "close") return false;
                        if (action == "ok") {
                            var iframe = this.getIFrameEl();
                            var data = iframe.contentWindow.GetData();
                            data = mini.clone(data);    //必须
                            if (data) {
                                for (var i = 0; i < data.length; i++) {
                                    var row = {
                                        GoodsCode: data[i].Id,
                                        GoodsBarCode:data[i].GoodsBarCode,
                                        SalePriceOld: data[i].SalePrice,
                                        VipPriceOld: data[i].VipPrice,
                                        TradePriceOld: data[i].TradePrice,
                                        SalePrice: 0,
                                        VipPrice: 0,
                                        TradePrice: 0,
                                        StockQty: 0,
                                        LossMoney: 0,
                                        NontaxLossMoney:0
                                    };
                                    addRow(row);
                                }
                            }
                        }

                    }
                });
            });
            $("#btnQuery").click(function () {
                location.href = "/Fb/FbAdjustSalepriceList";
            });
        });
    </script>
</head>
<body>
    <div class="container">
        <div id="toolbar1" class="mini-toolbar" style="padding: 2px;">
            <table style="width: 100%;">
                <tr>
                    <td>
                        <a id="btnFormSubmit" iconcls="icon-save" class="mini-button" plain="true" tooltip="保存(Ctrl+S)">保存</a>
                        <a id="btnGoods" iconcls="icon-find" class="mini-button" plain="true" tooltip="商品">商品</a>
                        <a id="btnInStock" iconcls="icon-upload" class="mini-button" plain="true" tooltip="入库">入库</a>
                        <a id="btnExame" iconcls="icon-ok" class="mini-button" plain="true" tooltip="审核(Ctrl+E)">审核</a>
                        <a id="btnQuery" iconcls="icon-search" class="mini-button" plain="true" tooltip="查询">查询</a>
                        <a id="btnSubmit" iconcls="icon-upgrade" class="mini-button" plain="true" tooltip="提交">提交</a>
                        <a id="btnPrint" iconcls="icon-printer" class="mini-button" plain="true" tooltip="打印">打印</a>
                        <a id="btnFormReset" iconcls="icon-undo" class="mini-button" plain="true" tooltip="重置(Esc)">重置</a>
                        <a id="btnClosePage" iconcls="icon-no" class="mini-button" plain="true" tooltip="关闭(Ctrl+Q)">关闭</a>
                    </td>
                    <td>
                    </td>
                </tr>
            </table>
        </div>
        <div class="tooltip critical hidden" id="Tooltip_Critical_FbAdjustSaleprice">
            <img src="/images/critical.png" alt="Warning" height="48" width="48" />
            <p class="content">
                此处填写关于调商品售价编辑页面的出错信息
            </p>
            <div class="button-close">
                x
            </div>
            <div class="buttonGroup">
                <input type="button" class="myYellowButton buttonNoMoreShow" value="不再显示" />
                <input type="button" class="myYellowButton buttonClose" value="关闭" />
            </div>
        </div>
        <form id="formMain" method="post" action="">
            <fieldset>
                <legend>基本信息</legend>
                <div class="ablock">
                    <label for="Control_AdjustNumber">调整单号:</label>
                    <input id="Control_AdjustNumber" value="@Model.Id" name="Id" class="mini-textbox" enabled="false"/>
                </div>

                <div class="ablock">
                    <label for="Control_AdjustDate">调整日期:</label>
                    <input type="text" id="Control_AdjustDate" name="AdjustDate"  value="@Model.AdjustDate" class="mini-datepicker"  format="yyyy-MM-dd H:mm:ss" timeFormat="H:mm:ss" showTime="true" showOkButton="true" showClearButton="true" required="false" />
                </div>

                <div class="ablock colspan2">
                    <label for="Control_AdjustReason">调整原因:</label>
                    <input type="text"  value="@Model.AdjustReason" class="mini-textbox" name="AdjustReason" id="Control_AdjustReason" vtype="maxLength:40" />
                </div>

                <div class="ablock" style="display: none">
                    <label for="Control_CreateDate">创建时间:</label>
                    <input type="text" id="Control_CreateDate" name="CreateDate"  value="@Model.CreateDate" class="mini-datepicker"  format="yyyy-MM-dd H:mm:ss" timeFormat="H:mm:ss" showTime="true" showOkButton="true" showClearButton="true" required="false" />
                </div>

                <div class="ablock" style="display: none">
                    <label for="Control_Operator">操作员:</label>
                    <input type="text"  value="@Model.Operator" class="mini-textbox" name="Operator" id="Control_Operator" vtype="maxLength:20" />
                </div>

                <div class="ablock" style="display: none">
                    <label for="Control_Assessor">审核人:</label>
                    <input type="text"  value="@Model.Assessor" class="mini-textbox" name="Assessor" id="Control_Assessor" vtype="maxLength:20" />
                </div>

                <div class="ablock" style="display: none">
                    <label for="Control_IfExamine">是否审核:</label>
                    <div id="Control_IfExamine" name="IfExamine" value="@Model.IfExamine" trueValue="1" falseValue="0" enabled="false" class="mini-checkbox" readOnly="false" text="审核"></div>
                </div>

                <div class="ablock" style="display: none">
                    <label for="Control_ExamineDate">审核时间:</label>
                    <input type="text" id="Control_ExamineDate" name="ExamineDate" enabled="false" value="@Model.ExamineDate" class="mini-datepicker"  format="yyyy-MM-dd H:mm:ss" timeFormat="H:mm:ss" showTime="true" showOkButton="true" showClearButton="true" required="false" />
                </div>

                <div class="ablock" style="display: none">
                    <label for="Control_OperatorDate">操作时间:</label>
                    <input type="text" id="Control_OperatorDate" name="OperatorDate"  value="@Model.OperatorDate" class="mini-datepicker"  format="yyyy-MM-dd H:mm:ss" timeFormat="H:mm:ss" showTime="true" showOkButton="true" showClearButton="true" required="false" />
                </div>


            </fieldset>

            <div id="datagrid1" class="mini-datagrid" url="/Fb/SearchFbAdjustSalepriceGoodsList?AdjustNumber=@(string.IsNullOrEmpty(Model.Id) ? "!##$%" : Model.Id)"
            style="width: 100%;  height: 300px;margin-top:10px;" idfield="id" allowresize="false" sizelist="[20,30,50,100]"
            pagesize="20" multiselect="true" showFilterRow="false" showpager="false" onrowdblclick="onrowdblclick">
                <div property="columns">
                    <div type="indexcolumn" width="30">
                    </div>
                    <div type="checkcolumn" width="30">
                    </div>
                    <div field="GoodsCode" headeralign="center" align="center" width="100">
                        商品编码
					<input id="filter_GoodsCode" name="GoodsCode" property="editor" class="mini-combobox" allowinput="true" valuefield="Id" textfield="GoodsName" onvaluechanged="onGoodsChanged" url="/Fb/SearchFbGoodsArchivesListForList" style="width: 100%;" />
                    </div>
                    <div field="GoodsName" headeralign="center" align="center" width="100">
                        商品名称
                    </div>
                    <div field="GoodsBarCode" headeralign="center" align="center" width="60">
                        商品销售码
					<input id="filter_GoodsBarCode" name="GoodsBarCode" property="editor" class="mini-textbox" enabled="false" style="width: 100%;" />
                    </div>
                    <div field="SalePriceOld" headeralign="center" align="center" width="60">
                        原销售价
					<input id="filter_SalePriceOld" name="SalePriceOld" property="editor" maxvalue="999999" class="mini-spinner" enabled="false" decimalplaces="4" style="width: 100%;" />
                    </div>
                    <div field="SalePrice" headeralign="center" align="center" width="60">
                        销售价
					<input id="filter_SalePrice" name="SalePrice" property="editor" class="mini-spinner" maxvalue="999999" decimalplaces="4" style="width: 100%;" />
                    </div>
                    <div field="VipPriceOld" headeralign="center" align="center" width="60">
                        原会员价
					<input id="filter_VipPriceOld" name="VipPriceOld" property="editor" class="mini-spinner" maxvalue="999999" enabled="false" decimalplaces="4" style="width: 100%;" />
                    </div>
                    <div field="VipPrice" headeralign="center" align="center" width="60">
                        会员价
					<input id="filter_VipPrice" name="VipPrice" property="editor" class="mini-spinner" maxvalue="999999" decimalplaces="4" style="width: 100%;" />
                    </div>
                    <div field="TradePriceOld" headeralign="center" align="center" width="60">
                        原批发价
					<input id="filter_TradePriceOld" name="TradePriceOld" property="editor" class="mini-spinner" maxvalue="999999" enabled="false" decimalplaces="4" style="width: 100%;" />
                    </div>
                    <div field="TradePrice" headeralign="center" align="center" width="60">
                        批发价
					<input id="filter_TradePrice" name="TradePrice" property="editor" class="mini-spinner" maxvalue="999999" decimalplaces="4" style="width: 100%;" />
                    </div>
                    <div field="StockQty" headeralign="center" align="center" width="60">
                        剩余数量
					<input id="filter_StockQty" name="StockQty" property="editor" class="mini-spinner" maxvalue="999999" decimalplaces="0" style="width: 100%;" />
                    </div>
                    <div field="LossMoney" headeralign="center" align="center" width="60">
                        损溢金额
					<input id="filter_LossMoney" name="LossMoney" property="editor" class="mini-spinner" maxvalue="999999" decimalplaces="4" style="width: 100%;" />
                    </div>
                    <div field="NontaxLossMoney" headeralign="center" align="center" width="60">
                        不含税损溢金额
					<input id="filter_NontaxLossMoney" name="NontaxLossMoney" property="editor" maxvalue="999999" class="mini-spinner" decimalplaces="4" style="width: 100%;" />
                    </div>

                </div>
            </div>

