@model YiQiWorkFlow.Domain.Ms.MsCardtypeGoodsPoints
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>商品积分编辑</title>
    <link type="text/css" rel="Stylesheet" href="/Styles/editPage.css" />
    <script type="text/javascript" src="/scripts/boot.js"></script>
    <script type="text/javascript" src="/Scripts/editPage.js"></script>
    <script type="text/javascript"> var pageTitle = "商品积分"; var formChanged = false; var pageType = "Edit"; var createTime = "2014/2/15 19:58:51"; var id = "@Model.Id"; pageName = "MsCardtypeGoodsPointsEdit"; </script>
    <script type="text/javascript">
        function SaveData() {
            var form = new mini.Form("#formMain"); // default form
            var o = form.getData(true);
            $.ajax({
                url: "/Ms/SaveMsCardtypeGoodsPoints",
                type: 'post',
                data: o,
                cache: false,
                dataType: "json",
                success: function (r) {
                    if (r.IsSuccess == true) {
                        closeWithNoValidate();
                    } else {
                        $("#Tooltip_Critical_MsCardtypeGoodsPoints .content").first().text(r.Message);
                        $("#Tooltip_Critical_MsCardtypeGoodsPoints").show("fast");
                        form.unmask();
                        $(document).scrollTop(0);
                    }
                },
                error: function (jqXHR, textStatus, errorThrown) {
                    $("#Tooltip_Critical_MsCardtypeGoodsPoints .content").first().text(jqXHR.responseText);
                    $("#Tooltip_Critical_MsCardtypeGoodsPoints").show("fast");
                    form.unmask();
                    $(document).scrollTop(0);
                }
            });
        }

        function onCloseClick(e) {
            var obj = e.sender;
            obj.setText("");
            obj.setValue("");
        }

        function onButtonEdit(e) {
            var btnEdit = this;
            mini.open({
                url: "/Common/GoodsSelector",
                showMaxButton: false,
                title: "选择商品",
                width: 600,
                height: 400,
                ondestroy: function (action) {
                    if (action == "ok") {
                        var iframe = this.getIFrameEl();
                        var data = iframe.contentWindow.GetData();
                        data = mini.clone(data);
                        if (data) {
                            btnEdit.setValue(data.id);
                            btnEdit.setText(data.id);

                            var txtGoodsName = mini.get('#Control_GoodsName');
                            txtGoodsName.setValue(data.text);
                        }
                    }
                }
            });
        }

        $(function () {

            var hGoodsCode = mini.get('#control_hGoodsCode');
            var GoodsCode = mini.get('#Control_GoodsCode');
            if (hGoodsCode) {
                GoodsCode.setValue(hGoodsCode.getValue());
                GoodsCode.text = hGoodsCode.getValue();
            }
        });
    </script>
</head>
<body>
    <div class="container">
        <h1>商品积分编辑
        </h1>
        <div class="tooltip warning hidden" id="Tooltip_Warning_MsCardtypeGoodsPoints">
            <img src="/images/Warning.png" alt="Warning" height="48" width="48" />
            <p class="content">
                此处填写关于商品积分编辑页面的警告信息
            </p>
            <div class="button-close">
                x
            </div>
            <div class="buttonGroup">
                <input type="button" class="myYellowButton buttonNoMoreShow" value="不再显示" />
                <input type="button" class="myYellowButton buttonClose" value="关闭" />
            </div>
        </div>
        <div class="tooltip info hidden" id="Tooltip_Info_MsCardtypeGoodsPoints">
            <img src="/images/Info.png" alt="Warning" height="48" width="48" />
            <p class="content">
                此处填写关于商品积分编辑页面的提示信息
            </p>
            <div class="button-close">
                x
            </div>
            <div class="buttonGroup">
                <input type="button" class="myYellowButton buttonNoMoreShow" value="不再显示" />
                <input type="button" class="myYellowButton buttonClose" value="关闭" />
            </div>
        </div>
        <div class="tooltip help hidden" id="Tooltip_Help_MsCardtypeGoodsPoints">
            <img src="/images/Help.png" alt="Warning" height="48" width="48" />
            <p class="content">
                此处填写关于商品积分编辑页面的帮助信息
            </p>
            <div class="button-close">
                x
            </div>
            <div class="buttonGroup">
                <input type="button" class="myYellowButton buttonNoMoreShow" value="不再显示" />
                <input type="button" class="myYellowButton buttonClose" value="关闭" />
            </div>
        </div>
        <div class="tooltip critical hidden" id="Tooltip_Critical_MsCardtypeGoodsPoints">
            <img src="/images/critical.png" alt="Warning" height="48" width="48" />
            <p class="content">
                此处填写关于商品积分编辑页面的出错信息
            </p>
            <div class="button-close">
                x
            </div>
            <div class="buttonGroup">
                <input type="button" class="myYellowButton buttonNoMoreShow" value="不再显示" />
                <input type="button" class="myYellowButton buttonClose" value="关闭" />
            </div>
        </div>
        <form id="formMain" method="post" action="">
            <fieldset>
                <legend>基本信息</legend>
                <div class="ablock">
                    <label for="Control_CardCode">卡类型编码:</label>
                    <div id="Control_CardCode" name="CardCode" class="mini-combobox" style="width: 150px;" popupwidth="400" textfield="Id" valuefield="Id"
                        url="/Ms/GetMsCardtypeManageList" showclose="true" oncloseclick="onCloseClick" emptytext="请选择..." required="true" value="@Model.CardCode">
                        <div property="columns">
                            <div header="卡类型编码" field="Id"></div>
                            <div header="卡类型名称" field="CardName"></div>
                        </div>
                    </div>
                </div>

                <div class="ablock">
                    <label for="Control_GoodsCode">商品编码:</label>
                    <input id="Control_GoodsCode" name="GoodsCode" class="mini-buttonedit" onbuttonclick="onButtonEdit" allowinput="false" required="true" value="@Model.GoodsCode" text="@Model.GoodsCode" />

                    <input id="control_hGoodsCode" value="@Model.GoodsCode" name="hGoodsCode" class="mini-hidden" />
                </div>

                <div class="ablock">
                    <label for="Control_GoodsName">商品名称:</label>
                    <input type="text" value="@Model.GoodsName" class="mini-textbox" id="Control_GoodsName" name="GoodsName" vtype="maxLength:20" readonly="readonly" />
                </div>

                <div class="ablock">
                    <label for="Control_ExpendBase">消费基数:</label>
                    <input type="text" id="Control_ExpendBase" name="ExpendBase" value="@Model.ExpendBase" class="mini-spinner" minvalue="0" maxvalue="1000" decimalplaces="2" />
                </div>

                <div class="ablock">
                    <label for="Control_PointsValues">积分分值:</label>
                    <input type="text" id="Control_PointsValues" name="PointsValues" value="@Model.PointsValues" class="mini-spinner" minvalue="0" maxvalue="1000" decimalplaces="2" />
                </div>

                <div class="ablock">
                    <label for="Control_SysGuid">系统标识:</label>
                    <input type="text" value="@Model.SysGuid" class="mini-textbox" name="SysGuid" id="Control_SysGuid" vtype="maxLength:60" />
                </div>

                <div class="ablock" style="display: none">
                    <label for="Control_Id">:</label>
                    <input id="Control_Id" value="@Model.Id" name="Id" class="mini-hidden" />
                </div>


            </fieldset>
            <div class="clear">
            </div>
            <div class="control-panel">
                <div class="control-button">
                    <input type="button" class="myButton" id="btnFormSubmit" value="保存(Ctrl+S)" />
                    <input type="reset" class="myGrayButton" id="btnFormReset" value="重置(Esc)" />
                    <input type="button" class="myRedButton" id="btnClosePage" value="关闭(Ctrl+Q)" />
                </div>
                <div class="botton-up">
                </div>
            </div>
        </form>
    </div>
</body>
</html>