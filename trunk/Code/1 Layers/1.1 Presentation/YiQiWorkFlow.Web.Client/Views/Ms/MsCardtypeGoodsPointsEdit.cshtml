<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>商品积分编辑</title>
    <link type="text/css" rel="Stylesheet" href="/Styles/editPage.css" />
    <script type="text/javascript" src="/scripts/boot.js"></script>
    <script type="text/javascript" src="/Scripts/editPage.js"></script>
    <script type="text/javascript"> var pageTitle = "商品积分"; var formChanged = false; var pageType = "Edit"; var createTime = "2014/2/15 19:58:51"; var id = "@Model.Id"; pageName = "MsCardtypeGoodsPointsEdit"; </script>
    <script type="text/javascript">
        function SaveData() {
            var form = new mini.Form("#formMain"); // default form
            var o = form.getData(true);

            var grid1 = mini.get("datagrid1");
            grid1.commitEdit();
            var goods = grid1.data;
            if (grid1.data.length == 0) {
                mini.alert("必须设置积分商品信息！");
                return false;
            }
            for (var i = 0; i < goods.length; i++) {
                // 验证
            }
            o["goods"] = mini.encode(goods);

            $.ajax({
                url: "/Ms/SaveMsCardtypeGoodsPoints",
                type: 'post',
                data: o,
                cache: false,
                dataType: "json",
                success: function (r) {
                    if (r.IsSuccess == true) {
                        location.href = "/Ms/MsCardtypeGoodsPointsEdit";
                    } else {
                        $("#Tooltip_Critical_MsCardtypeGoodsPoints .content").first().text(r.Message);
                        $("#Tooltip_Critical_MsCardtypeGoodsPoints").show("fast");
                        form.unmask();
                        $(document).scrollTop(0);
                    }
                },
                error: function (jqXHR, textStatus, errorThrown) {
                    $("#Tooltip_Critical_MsCardtypeGoodsPoints .content").first().text(jqXHR.responseText);
                    $("#Tooltip_Critical_MsCardtypeGoodsPoints").show("fast");
                    form.unmask();
                    $(document).scrollTop(0);
                }
            });
        }

        function onCloseClick(e) {
            var obj = e.sender;
            obj.setText("");
            obj.setValue("");
        }

        function onButtonEdit(e) {
            var btnEdit = this;
            mini.open({
                url: "/Common/GoodsSelector",
                showMaxButton: false,
                title: "选择商品",
                width: 600,
                height: 400,
                ondestroy: function (action) {
                    if (action == "ok") {
                        var iframe = this.getIFrameEl();
                        var data = iframe.contentWindow.GetData();
                        data = mini.clone(data);
                        if (data) {
                            btnEdit.setValue(data.id);
                            btnEdit.setText(data.id);

                            var txtGoodsName = mini.get('#Control_GoodsName');
                            txtGoodsName.setValue(data.text);
                        }
                    }
                }
            });
        }

        $(function () {

            var grid = mini.get("datagrid1");
            grid.reload();
            jQuery.hotkeys.add('return', function () {
                if (mini.get("Control_CardCode").getValue().length == 0) {
                    alert("必须先设置卡类型");
                    return false;
                }
                if (grid.isEditing()) {
                    grid.commitEdit();
                }
                var row = {};
                grid.addRow(row, 0);
                grid.cancelEdit();
                grid.beginEditRow(row);
                //mini.getbyName("GoodsCode", "datagrid1").setUrl("/Fb/SearchFbGoodsArchivesListForList?SupCode=" + mini.get("Control_CardCode").getValue());
                mini.getbyName("GoodsCode", "datagrid1").setUrl("/Fb/SearchFbGoodsArchivesListForList");
                setTimeout(function () {
                    mini.getbyName("GoodsCode", "datagrid1").focus();
                }, 500);
            });
            jQuery.hotkeys.add('esc', function () {
                grid.reload();
            });
            jQuery.hotkeys.add('del', function () {
                grid.removeRows(grid.getSelecteds());
            });
        });

        function onGoodsChanged(e) {
            mini.getbyName("GoodsCode", "datagrid1").setValue(e.selected.GoodsBarCode);
            mini.getbyName("GoodsName", "datagrid1").setValue(e.selected.GoodsName);
        }

        //function onCardTypeChanged(e) {
        //    mini.get('#datagrid1').url = "/Ms/SearchMsCardtypeGoodsPointsList?CardCode=" + mini.get("Control_CardCode").getValue();
        //    mini.get('#datagrid1').reload();
        //}

        function addRow(row) {
            var grid = mini.get("datagrid1");
            grid.addRow(row, 0);

        }
        function onrowdblclick(e) {
            var grid = mini.get("datagrid1");
            if (grid.isEditing()) {
                grid.commitEdit();
            }
            grid.beginEditRow(e.row);
            //mini.getbyName("GoodsCode", "datagri1").focus();
            setTimeout(function () {
                mini.getbyName("GoodsCode", "datagrid1").focus();
            }, 500);
        }

        function onCardCodeChanged(e) {

            if (e && e.selected) {
                var url = "/Ms/SearchMsCardtypeGoodsPointsList?CardCode=" + e.selected.Id;
                var grid = mini.get('#datagrid1');
                grid.url = url;
                grid.reload();
                mini.get('#Control_CardName').setValue(e.selected.CardName);
            } else {
                mini.get('#Control_CardName').setValue('');
            }
        }

    </script>
</head>
<body>
