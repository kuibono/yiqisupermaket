@model YiQiWorkFlow.Domain.Ms.MsExchangeDetail
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>赠品兑换明细编辑</title>
    <link type="text/css" rel="Stylesheet" href="/Styles/editPage.css" />
    <script type="text/javascript" src="/scripts/boot.js"></script>
    <script type="text/javascript" src="/Scripts/editPage.js"></script>
    <script type="text/javascript"> var pageTitle = "赠品兑换明细"; var formChanged = false; var pageType = "Edit"; var createTime = "2014/2/15 19:58:51";var id="@Model.Id";pageName="MsExchangeDetailEdit"; </script>
	<script type="text/javascript">
        function SaveData() {
            var form = new mini.Form("#formMain"); // default form
            var o = form.getData(true);
            $.ajax({
                url: "/Ms/SaveMsExchangeDetail",
                type: 'post',
                data: o,
                cache: false,
				dataType:"json",
                success: function (r) {
                    if (r.IsSuccess == true) {
                        closeWithNoValidate();
                    } else {
                        $("#Tooltip_Critical_MsExchangeDetail .content").first().text(r.Message);
                        $("#Tooltip_Critical_MsExchangeDetail").show("fast");
                        form.unmask();
                        $(document).scrollTop(0);
                    }
                },
                error: function (jqXHR, textStatus, errorThrown) {
                    $("#Tooltip_Critical_MsExchangeDetail .content").first().text(jqXHR.responseText);
                    $("#Tooltip_Critical_MsExchangeDetail").show("fast");
                    form.unmask();
					$(document).scrollTop(0);
                }
            });
        }

        function onButtonEdit(e) {
            var btnEdit = this;
            mini.open({
                url: "/Common/GoodsSelector",
                showMaxButton: false,
                title: "选择商品",
                width: 600,
                height: 400,
                ondestroy: function (action) {
                    if (action == "ok") {
                        var iframe = this.getIFrameEl();
                        var data = iframe.contentWindow.GetData();
                        data = mini.clone(data);
                        if (data) {
                            btnEdit.setValue(data.id);
                            btnEdit.setText(data.id);

                            var txtGoodsName = mini.get('#Control_GoodsName');
                            txtGoodsName.setValue(data.text);
                        }
                    }
                }
            });
        }
    </script>
</head>
<body>
    <div class="container">
        <h1>
            赠品兑换明细编辑
        </h1>
        <div class="tooltip warning hidden" id="Tooltip_Warning_MsExchangeDetail">
            <img src="/images/Warning.png" alt="Warning" height="48" width="48" />
			<p class="content">
            	此处填写关于赠品兑换明细编辑页面的警告信息
			</p>
            <div class="button-close">
                x</div>
            <div class="buttonGroup">
                <input type="button" class="myYellowButton buttonNoMoreShow" value="不再显示" />
                <input type="button" class="myYellowButton buttonClose" value="关闭" />
            </div>
        </div>
        <div class="tooltip info hidden" id="Tooltip_Info_MsExchangeDetail">
            <img src="/images/Info.png" alt="Warning" height="48" width="48" />
			<p class="content">
            	此处填写关于赠品兑换明细编辑页面的提示信息
			</p>
            <div class="button-close">
                x</div>
            <div class="buttonGroup">
                <input type="button" class="myYellowButton buttonNoMoreShow" value="不再显示" />
                <input type="button" class="myYellowButton buttonClose" value="关闭" />
            </div>
        </div>
        <div class="tooltip help hidden" id="Tooltip_Help_MsExchangeDetail">
            <img src="/images/Help.png" alt="Warning" height="48" width="48" />
			<p class="content">
            	此处填写关于赠品兑换明细编辑页面的帮助信息
			</p>
            <div class="button-close">
                x</div>
            <div class="buttonGroup">
                <input type="button" class="myYellowButton buttonNoMoreShow" value="不再显示" />
                <input type="button" class="myYellowButton buttonClose" value="关闭" />
            </div>
        </div>
        <div class="tooltip critical hidden" id="Tooltip_Critical_MsExchangeDetail">
            <img src="/images/critical.png" alt="Warning" height="48" width="48" />
			<p class="content">
            此处填写关于赠品兑换明细编辑页面的出错信息
			</p>
            <div class="button-close">
                x</div>
            <div class="buttonGroup">
                <input type="button" class="myYellowButton buttonNoMoreShow" value="不再显示" />
                <input type="button" class="myYellowButton buttonClose" value="关闭" />
            </div>
        </div>
        <form id="formMain" method="post" action="">
        <fieldset>
            <legend>基本信息</legend>
            <div class="ablock">
                <label for="Control_ExchangeNumber">兑换单号:</label>
                <input type="text"  value="@Model.ExchangeNumber" class="mini-textbox" name="ExchangeNumber" id="Control_ExchangeNumber" vtype="maxLength:20" required="true" />
            </div>

            <div class="ablock">
                <label for="Control_sNumber">序号:</label>
                <input type="text" id="Control_sNumber" name="sNumber"  value="@Model.sNumber" class="mini-spinner" minValue="-999999999" maxValue="999999999" decimalPlaces="0"/>
            </div>

            <div class="ablock">
                    <label for="Control_GoodsCode">商品编码:</label>
                    <input id="Control_GoodsCode" name="GoodsCode" class="mini-buttonedit" onbuttonclick="onButtonEdit" allowinput="false" required="true" value="@Model.GoodsCode" text="@Model.GoodsCode" />

                    <input id="control_hGoodsCode" value="@Model.GoodsCode" name="hGoodsCode" class="mini-hidden" />
                </div>

                <div class="ablock">
                    <label for="Control_GoodsName">商品名称:</label>
                    <input type="text" value="@Model.GoodsName" class="mini-textbox" id="Control_GoodsName" name="GoodsName" vtype="maxLength:20" readonly="readonly" />
                </div>

            <div class="ablock">
                <label for="Control_ExchangeQty">兑换数量:</label>
                <input type="text" id="Control_ExchangeQty" name="ExchangeQty"  value="@Model.ExchangeQty" class="mini-spinner" minValue="1" maxValue="999999999" decimalPlaces="2" required="true" />
            </div>

            <div class="ablock">
                <label for="Control_ExchangePoints">兑换积分:</label>
                <input type="text" id="Control_ExchangePoints" name="ExchangePoints"  value="@Model.ExchangePoints" class="mini-spinner" minValue="-999999999" maxValue="999999999" decimalPlaces="2"/>
            </div>

            <div class="ablock">
                <label for="Control_PointsTotal">积分合计:</label>
                <input type="text" id="Control_PointsTotal" name="PointsTotal"  value="@Model.PointsTotal" class="mini-spinner" minValue="-999999999" maxValue="999999999" decimalPlaces="2"/>
            </div>

            <div class="ablock">
                <label for="Control_GrossMoney">含税毛利:</label>
                <input type="text" id="Control_GrossMoney" name="GrossMoney"  value="@Model.GrossMoney" class="mini-spinner" minValue="-999999999" maxValue="999999999" decimalPlaces="4"/>
            </div>

            <div class="ablock">
                <label for="Control_NontaxGrossMoney">不含税毛利:</label>
                <input type="text" id="Control_NontaxGrossMoney" name="NontaxGrossMoney"  value="@Model.NontaxGrossMoney" class="mini-spinner" minValue="-999999999" maxValue="999999999" decimalPlaces="4"/>
            </div>

            <div class="ablock">
                <label for="Control_SysGuid">系统标识:</label>
                <input type="text"  value="@Model.SysGuid" class="mini-textbox" name="SysGuid" id="Control_SysGuid" vtype="maxLength:60" />
            </div>

            <div class="ablock" style="display:none">
                <label for="Control_Id">:</label>
                <input id="Control_Id" value="@Model.Id" name="Id" class="mini-hidden"/>
            </div>

           
        </fieldset>
        <div class="clear">
        </div>
        <div class="control-panel">
            <div class="control-button">
                <input type="button" class="myButton" id="btnFormSubmit" value="保存(Ctrl+S)" />
                <input type="reset" class="myGrayButton" id="btnFormReset" value="重置(Esc)" />
                <input type="button" class="myRedButton" id="btnClosePage" value="关闭(Ctrl+Q)" />
            </div>
            <div class="botton-up">
            </div>
        </div>
        </form>
    </div>
</body>
</html>

