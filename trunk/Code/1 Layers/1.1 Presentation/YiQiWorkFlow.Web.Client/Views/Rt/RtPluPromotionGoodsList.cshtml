				<div field="SpW2" headeralign="center" align="center" width="60">
				    星期2
					<input id="filter_SpW2" name="SpW2" property="filter" class="mini-textbox" onvaluechanged="search" style="width:100%;" />
				</div>
				<div field="SpW3" headeralign="center" align="center" width="60">
				    星期3
					<input id="filter_SpW3" name="SpW3" property="filter" class="mini-textbox" onvaluechanged="search" style="width:100%;" />
				</div>
				<div field="SpW4" headeralign="center" align="center" width="60">
				    星期4
					<input id="filter_SpW4" name="SpW4" property="filter" class="mini-textbox" onvaluechanged="search" style="width:100%;" />
				</div>
				<div field="SpW5" headeralign="center" align="center" width="60">
				    星期5
					<input id="filter_SpW5" name="SpW5" property="filter" class="mini-textbox" onvaluechanged="search" style="width:100%;" />
				</div>
				<div field="SpW6" headeralign="center" align="center" width="60">
				    星期6
					<input id="filter_SpW6" name="SpW6" property="filter" class="mini-textbox" onvaluechanged="search" style="width:100%;" />
				</div>
				<div field="SpW7" headeralign="center" align="center" width="60">
				    星期7
					<input id="filter_SpW7" name="SpW7" property="filter" class="mini-textbox" onvaluechanged="search" style="width:100%;" />
				</div>
				<div field="GoodsBarCode" headeralign="center" align="center" width="60">
				    商品销售码
					<input id="filter_GoodsBarCode" name="GoodsBarCode" property="filter" class="mini-textbox" onvaluechanged="search" style="width:100%;" />
				</div>
				<div field="GoodsCode" headeralign="center" align="center" width="60">
				    商品编码
					<input id="filter_GoodsCode" name="GoodsCode" property="filter" class="mini-textbox" onvaluechanged="search" style="width:100%;" />
				</div>
				<div field="IfSalePrice" headeralign="center" align="center" width="60">
