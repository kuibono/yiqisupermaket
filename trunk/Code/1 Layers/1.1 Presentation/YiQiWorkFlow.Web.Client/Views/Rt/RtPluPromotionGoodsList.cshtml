					<input id="filter_IfSalePrice" name="IfSalePrice" property="filter" class="mini-textbox" onvaluechanged="search" style="width:100%;" />
				</div>
				<div field="SalePriceOld" headeralign="center" align="center" width="60">
				    原销售价
					<input id="filter_SalePriceOld" name="SalePriceOld" property="filter" class="mini-textbox" onvaluechanged="search" style="width:100%;" />
				</div>
				<div field="SalePriceDiscount" headeralign="center" align="center" width="60">
				    销售价折扣
					<input id="filter_SalePriceDiscount" name="SalePriceDiscount" property="filter" class="mini-textbox" onvaluechanged="search" style="width:100%;" />
				</div>
