					<input id="filter_TotalLimit" name="TotalLimit" property="filter" class="mini-textbox" onvaluechanged="search" style="width:100%;" />
				</div>
				<div field="TotalLimitSale" headeralign="center" align="center" width="60">
				    总已销量
					<input id="filter_TotalLimitSale" name="TotalLimitSale" property="filter" class="mini-textbox" onvaluechanged="search" style="width:100%;" />
				</div>
				<div field="DayLimit" headeralign="center" align="center" width="60">
				    日限量
					<input id="filter_DayLimit" name="DayLimit" property="filter" class="mini-textbox" onvaluechanged="search" style="width:100%;" />
				</div>
				<div field="DayLimitDate" headeralign="center" align="center" width="60">
				    日限日期
