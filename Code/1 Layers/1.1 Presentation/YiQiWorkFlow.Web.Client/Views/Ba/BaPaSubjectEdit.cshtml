@model YiQiWorkFlow.Domain.Ba.BaPaSubject
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>财务科目设置编辑</title>
    <link type="text/css" rel="Stylesheet" href="/Styles/editPage.css" />
    <script type="text/javascript" src="/scripts/boot.js"></script>
    <script type="text/javascript" src="/Scripts/editPage.js"></script>
    <script type="text/javascript"> var pageTitle = "财务科目设置"; var formChanged = false; var pageType = "Edit"; var createTime = "2014/2/15 19:58:38";var id="@Model.Id";pageName="BaPaSubjectEdit"; </script>
	<script type="text/javascript">
        function SaveData() {
            var form = new mini.Form("#formMain"); // default form
            var o = form.getData();
            $.ajax({
                url: "/Ba/SaveBaPaSubject",
                type: 'post',
                data: o,
                cache: false,
				dataType:"json",
                success: function (r) {
                    if (r.IsSuccess == true) {
                        closeWithNoValidate();
                    } else {
                        $("#Tooltip_Critical_BaPaSubject .content").first().text(r.Message);
                        $("#Tooltip_Critical_BaPaSubject").show("fast");
                        form.unmask();
                        $(document).scrollTop(0);
                    }
                },
                error: function (jqXHR, textStatus, errorThrown) {
                    $("#Tooltip_Critical_BaPaSubject .content").first().text(jqXHR.responseText);
                    $("#Tooltip_Critical_BaPaSubject").show("fast");
                    form.unmask();
					$(document).scrollTop(0);
                }
            });
        }
    </script>
</head>
<body>
    <div class="container">
        <h1>
            财务科目设置编辑
        </h1>
        <div class="tooltip warning hidden" id="Tooltip_Warning_BaPaSubject">
            <img src="/images/Warning.png" alt="Warning" height="48" width="48" />
			<p class="content">
            	此处填写关于财务科目设置编辑页面的警告信息
			</p>
            <div class="button-close">
                x</div>
            <div class="buttonGroup">
                <input type="button" class="myYellowButton buttonNoMoreShow" value="不再显示" />
                <input type="button" class="myYellowButton buttonClose" value="关闭" />
            </div>
        </div>
        <div class="tooltip info hidden" id="Tooltip_Info_BaPaSubject">
            <img src="/images/Info.png" alt="Warning" height="48" width="48" />
			<p class="content">
            	此处填写关于财务科目设置编辑页面的提示信息
			</p>
            <div class="button-close">
                x</div>
            <div class="buttonGroup">
                <input type="button" class="myYellowButton buttonNoMoreShow" value="不再显示" />
                <input type="button" class="myYellowButton buttonClose" value="关闭" />
            </div>
        </div>
        <div class="tooltip help hidden" id="Tooltip_Help_BaPaSubject">
            <img src="/images/Help.png" alt="Warning" height="48" width="48" />
			<p class="content">
            	此处填写关于财务科目设置编辑页面的帮助信息
			</p>
            <div class="button-close">
                x</div>
            <div class="buttonGroup">
                <input type="button" class="myYellowButton buttonNoMoreShow" value="不再显示" />
                <input type="button" class="myYellowButton buttonClose" value="关闭" />
            </div>
        </div>
        <div class="tooltip critical hidden" id="Tooltip_Critical_BaPaSubject">
            <img src="/images/critical.png" alt="Warning" height="48" width="48" />
			<p class="content">
            此处填写关于财务科目设置编辑页面的出错信息
			</p>
            <div class="button-close">
                x</div>
            <div class="buttonGroup">
                <input type="button" class="myYellowButton buttonNoMoreShow" value="不再显示" />
                <input type="button" class="myYellowButton buttonClose" value="关闭" />
            </div>
        </div>
        <form id="formMain" method="post" action="">
        <fieldset>
            <legend>基本信息</legend>
            <div class="ablock" style="display:none">
                <label for="Control_BaFlowNumber">流水号:</label>
                <input id="Control_BaFlowNumber" value="@Model.Id" name="Id" class="mini-hidden"/>
            </div>

            <div class="ablock">
                <label for="Control_OperatType">业务类型:</label>
                <input type="text"  value="@Model.OperatType" class="mini-textbox" name="OperatType" id="Control_OperatType" vtype="maxLength:20" />
            </div>

            <div class="ablock">
                <label for="Control_OpCode">经营方式:</label>
                <input type="text"  value="@Model.OpCode" class="mini-textbox" name="OpCode" id="Control_OpCode" vtype="maxLength:20" />
            </div>

            <div class="ablock">
                <label for="Control_sNumber">序号:</label>
                <input type="text"  value="@Model.sNumber" class="mini-textbox" name="sNumber" id="Control_sNumber" vtype="maxLength:20" />
            </div>

            <div class="ablock">
                <label for="Control_DebitCredit">借贷选择:</label>
                <input type="text"  value="@Model.DebitCredit" class="mini-textbox" name="DebitCredit" id="Control_DebitCredit" vtype="maxLength:20" />
            </div>

            <div class="ablock">
                <label for="Control_InputTax">税率:</label>
                <input type="text" id="Control_InputTax" name="InputTax"  value="@Model.InputTax" class="mini-spinner" minValue="-999999999" maxValue="999999999" decimalPlaces="4"/>
            </div>

            <div class="ablock">
                <label for="Control_SubjectCode">科目:</label>
                <input type="text"  value="@Model.SubjectCode" class="mini-textbox" name="SubjectCode" id="Control_SubjectCode" vtype="maxLength:20" />
            </div>

            <div class="ablock">
                <label for="Control_IfTax">是否含税:</label>
                <div id="Control_IfTax" name="IfTax" value="1" class="mini-checkbox" checked="true" readOnly="false" text="含税"></div>
            </div>

            <div class="ablock">
                <label for="Control_IfDept">是否部门:</label>
                <div id="Control_IfDept" name="IfDept" value="1" class="mini-checkbox" checked="true" readOnly="false" text="部门"></div>
            </div>

            <div class="ablock">
                <label for="Control_IfSupplier">是否供货商:</label>
                <div id="Control_IfSupplier" name="IfSupplier" value="1" class="mini-checkbox" checked="true" readOnly="false" text="供货商"></div>
            </div>

            <div class="ablock">
                <label for="Control_IfKind">是否项目:</label>
                <div id="Control_IfKind" name="IfKind" value="1" class="mini-checkbox" checked="true" readOnly="false" text="项目"></div>
            </div>

            <div class="ablock">
                <label for="Control_IfRate">是否税率:</label>
                <div id="Control_IfRate" name="IfRate" value="1" class="mini-checkbox" checked="true" readOnly="false" text="税率"></div>
            </div>

            <div class="ablock">
                <label for="Control_IfAntitone">是否金额反写:</label>
                <div id="Control_IfAntitone" name="IfAntitone" value="1" class="mini-checkbox" checked="true" readOnly="false" text="金额反写"></div>
            </div>

           
        </fieldset>
        <div class="clear">
        </div>
        <div class="control-panel">
            <div class="control-button">
                <input type="button" class="myButton" id="btnFormSubmit" value="保存(Ctrl+S)" />
                <input type="reset" class="myGrayButton" id="btnFormReset" value="重置(Esc)" />
                <input type="button" class="myRedButton" id="btnClosePage" value="关闭(Ctrl+Q)" />
            </div>
            <div class="botton-up">
            </div>
        </div>
        </form>
    </div>
</body>
</html>

