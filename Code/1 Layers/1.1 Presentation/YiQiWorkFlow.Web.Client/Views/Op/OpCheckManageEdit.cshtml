        function SaveData() {
            var form = new mini.Form("#formMain"); // default form
            var o = form.getData();

            var grid1 = mini.get("datagrid1");
            grid1.commitEdit();
            var detail = grid1.getChanges();
            //验证子表
            if (detail.length == 0) {
                alert("必须设置商品盘点单_商品明细！");
                return false;
            }
            for (var i = 0; i < detail.length; i++) {
                if (detail[i].CkFlowNumber == undefined || detail[i].CkFlowNumber == 0) {
                    alert("流水单号不能为空或者0！");
                    return false;
                }
                if (detail[i].CkNumber == undefined || detail[i].CkNumber == 0) {
                    alert("盘点单号不能为空或者0！");
                    return false;
                }
                if (detail[i].bCode == undefined || detail[i].bCode == 0) {
                    alert("分店编码不能为空或者0！");
                    return false;
                }
                if (detail[i].WhCode == undefined || detail[i].WhCode == 0) {
                    alert("仓库编码不能为空或者0！");
                    return false;
                }
                if (detail[i].GoodsCode == undefined || detail[i].GoodsCode == 0) {
                    alert("商品编码不能为空或者0！");
                    return false;
                }
                if (detail[i].GoodsBarCode == undefined || detail[i].GoodsBarCode == 0) {
                    alert("商品销售码不能为空或者0！");
                    return false;
                }
                if (detail[i].PurchasePrice == undefined || detail[i].PurchasePrice == 0) {
                    alert("含税进价不能为空或者0！");
                    return false;
                }
                if (detail[i].SalePrice == undefined || detail[i].SalePrice == 0) {
                    alert("销售价不能为空或者0！");
                    return false;
                }
                if (detail[i].PackCoef == undefined || detail[i].PackCoef == 0) {
                    alert("包装系数不能为空或者0！");
                    return false;
                }
                if (detail[i].PackQty == undefined || detail[i].PackQty == 0) {
                    alert("整件数量不能为空或者0！");
                    return false;
                }
                if (detail[i].CheckQty == undefined || detail[i].CheckQty == 0) {
                    alert("盘点数量不能为空或者0！");
                    return false;
                }
                if (detail[i].StockQty == undefined || detail[i].StockQty == 0) {
                    alert("库存数量不能为空或者0！");
                    return false;
                }
                if (detail[i].Operator == undefined || detail[i].Operator == 0) {
                    alert("操作员不能为空或者0！");
                    return false;
                }
                if (detail[i].SysGuid == undefined || detail[i].SysGuid == 0) {
                    alert("系统标识不能为空或者0！");
                    return false;
                }
            }
            
            o["detail"] = mini.encode(detail);

            $.ajax({
                url: "/Op/SaveOpCheckManage",
                type: 'post',
                data: o,
                cache: false,
                dataType: "json",
                success: function (r) {
                    if (r.IsSuccess == true) {
                        //location.href = "/Op/OpCheckManageList";
                        try{ history.go(-1); } catch(e){}
                    } else {
                        $("#Tooltip_Critical_PcPurchaseManage .content").first().text(r.Message);
                        $("#Tooltip_Critical_PcPurchaseManage").show("fast");
                        form.unmask();
                        $(document).scrollTop(0);
                    }
                },
                error: function (jqXHR, textStatus, errorThrown) {
                    $("#Tooltip_Critical_PcPurchaseManage .content").first().text(jqXHR.responseText);
                    $("#Tooltip_Critical_PcPurchaseManage").show("fast");
                    form.unmask();
                    $(document).scrollTop(0);
                }
            });
        }

