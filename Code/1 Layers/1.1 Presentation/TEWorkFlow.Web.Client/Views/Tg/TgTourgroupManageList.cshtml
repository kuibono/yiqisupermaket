				<div field="TaTypeCode" headeralign="center" align="center" width="60">
				    旅行社类型
					<input id="filter_TaTypeCode" name="TaTypeCode" property="filter" class="mini-textbox" onvaluechanged="search" style="width:100%;" />
				</div>
				<div field="GuideCode" headeralign="center" align="center" width="60">
				    导游编号
					<input id="filter_GuideCode" name="GuideCode" property="filter" class="mini-textbox" onvaluechanged="search" style="width:100%;" />
				</div>
				<div field="GuideName" headeralign="center" align="center" width="60">
				    导游名称
					<input id="filter_GuideName" name="GuideName" property="filter" class="mini-textbox" onvaluechanged="search" style="width:100%;" />
				</div>
				<div field="GuideTacCode" headeralign="center" align="center" width="60">
